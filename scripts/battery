if [ "$perc" -ge "80" ]; then
	icon="   ﭳﭳﭳﭳ "
elif [ "$perc" -ge "60" ]; then
	icon="   ﭳﭳﭳ— "
elif [ "$perc" -ge "40" ]; then
	icon="   ﭳﭳ—— "
elif [ "$perc" -ge "20" ]; then
	icon="   ﭳ——— "
elif [ "$perc" -lt "20" ]; then
	icon="   ———— "
fi

echo "$icon"
