#!/bin/bash
perc="$(cat /sys/class/power_supply/BAT1/capacity)"

#if [ "$perc" -ge "80" ]; then
#	icon="   ﭳﭳﭳﭳ "
#elif [ "$perc" -ge "60" ]; then
#	icon="   ﭳﭳﭳ  "
#elif [ "$perc" -ge "40" ]; then
#	icon="   ﭳﭳ   "
#elif [ "$perc" -ge "20" ]; then
