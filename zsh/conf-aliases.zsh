# Aliases for accesing config files
alias conf-dwm='cd $HOME/.config/dwm && $EDITOR $HOME/.config/dwm/config.def.h'
alias conf-statusbar='cd $HOME/.config/statusbar-rs/src && $EDITOR $HOME/.config/statusbar-rs/src/main.rs'
alias conf-dmenu='cd $HOME/.config/dmenu/ && $EDITOR $HOME/.config/dmenu/config.def.h'
alias conf-st='cd $HOME/.config/st && $EDITOR $HOME/.config/st/config.def.h'
alias conf-zsh='cd $HOME/.config/zsh/ && $EDITOR $HOME/.config/zsh/'
alias conf-nvim='cd $HOME/.config/nvim/lua/ && $EDITOR $HOME/.config/nvim/lua/'
alias conf-neofetch='cd $HOME/.config/neofetch/ && $EDITOR $HOME/.config/neofetch/config.conf'
alias conf-picom='cd $HOME/.config/ && $EDITOR $HOME/.config/picom.conf'
alias conf-dunst='cd $HOME/.config/dunst/ && $EDITOR $HOME/.config/dunst/dunstrc'
alias conf-ncspot='cd $HOME/.config/ncspot/ && $EDITOR $HOME/.config/ncspot/config.toml'
alias conf-ranger='cd $HOME/.config/ranger/ && $EDITOR $HOME/.config/ranger/'
alias conf-yazi='cd $HOME/.config/yazi/ && $EDITOR $HOME/.config/yazi/'

alias conf-scripts='cd $HOME/.local/bin/scripts'

FPROFILE='kasetonix'
alias conf-firefox='cd $HOME/.mozilla/firefox/$FPROFILE/chrome && $EDITOR $HOME/.mozilla/firefox/$FPROFILE/chrome'

alias catpat='echo "$fg_bold[yellow]$(cat $HOME/docs/gitpat)"'
